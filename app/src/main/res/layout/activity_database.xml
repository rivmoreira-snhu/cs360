<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*">

        <!-- Header Row -->
        <TableRow>
            <TextView
                android:text="Event Name"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:padding="8dp"/>
            <TextView
                android:text="Time"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:padding="8dp"/>
            <TextView
                android:text="Location"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:padding="8dp"/>
        </TableRow>

        <!-- Sample Data Row 1 -->
        <TableRow>
            <TextView
                android:text="Drop off"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
            <TextView
                android:text="7:30 AM"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
            <TextView
                android:text="Vehicle"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
        </TableRow>

        <!-- Sample Data Row 2 -->
        <TableRow>
            <TextView
                android:text="Lunch with Sarah"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
            <TextView
                android:text="1:30 PM"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
            <TextView
                android:text="Compass Coffee"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
        </TableRow>

        <!-- Sample Data Row 3 -->
        <TableRow>
            <TextView
                android:text="Project Retrospective"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
            <TextView
                android:text="3:00 PM"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
            <TextView
                android:text="Zoom"
                android:textColor="@color/textSecondary"
                android:padding="8dp"/>
        </TableRow>
    </TableLayout>
</ScrollView>
